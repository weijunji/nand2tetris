/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    HalfAdder(a=a, b=b, sum=sh, carry=ch1);
    HalfAdder(a=sh, b=c, sum=sum, carry=ch2);
    Or(a=ch1, b=ch2, out=carry);
}